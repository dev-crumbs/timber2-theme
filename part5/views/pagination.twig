{% if posts.pagination.pages is not empty %}
    <nav class="pagination-block">
        <ul class="pagination">
            {% if pagination.prev.link %}
                <li class="arrow"><a class="left" href="{{ pagination.prev.link }}">prev</a></li>
            {% else %}
            {% endif %}
            
            {# Pages #}
            {% for page in posts.pagination.pages %}
                {% if page.link %}
                    <li>
                        <a href="{{ page.link }}">{{ page.title }}</a>
                    </li>
                {% else %}
                    <li class="current">
                        <span>{{ page.title }}</span>
                    </li>
                {% endif %}
            {% endfor %}
            {# End Pages #}

            {% if pagination.next.link %}
                <li class="arrow"><a class="right" href="{{ pagination.next.link }}">next</a></li>
            {% else %}
            {% endif %}
        </ul>
    </nav>
{% endif %} 
